node {
    stage ('SCM checkout'){
        git "https://github.com/Adamshafi007/FlightBooking.git"
    }
    stage ('Build'){
        dir("C:\\Users\\Admin\\.jenkins\\workspace\\FlightCucumberProject\\FlightBooking") {
            sh "mvn clean test"
        }
        dir("FlightBooking/target") {
            sh "java -jar com.test-1.0-SNAPSHOT.jar"
        }
    }
    stage('Generate HTML report') {
        cucumber buildStatus: 'UNSTABLE',
                reportTitle: 'My report',
                fileIncludePattern: '**/*.json',
                trendsLimit: 10,
                classifications: [
                        [
                                'key': 'Browser',
                                'value': 'Firefox'
                        ]
                ]
    }
}